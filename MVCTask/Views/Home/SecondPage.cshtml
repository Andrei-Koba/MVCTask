@if (ViewBag.isDialog == false)
{

    <!DOCTYPE html>
    <html>
    <head>
        <link href="@Url.Content("~/CSS/bootstrap.css")" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/CSS/MainPageStyleSheet.css")" rel="stylesheet" type="text/css">
        @Scripts.Render("~/bundles/jquery")
